    <style>
    @import url('https://fonts.googleapis.com/css?family=Jua&display=swap');

    * {
      font-family: 'Jua', sans-serif;
    }

    .card {
      margin: 10px 30px;
    }
    </style>

    <script>
      async function click (room) {
        let res = await fetch('/api/imgJson/2/' + room)
        res = await res.json()
        download('data:application/octet-stream;base64,' + res[0], '2학년 ' + room + '반.png', 'application/octet-stream;base64');
      }
      
      setInterval(async () => {
        for (let room = 1; room < 4; room++) {
          let res = await fetch('/api/imgJson/2/' + room)
          res = await res.text()
          res = res.split(';')
          if (res[0] === '') {
            document.getElementsByClassName('render')[room - 1].setAttribute('src', 'https://ak4.picdn.net/shutterstock/videos/1011406034/thumb/1.jpg')
          } else document.getElementsByClassName('render')[room - 1].setAttribute('src', 'data:image/png;base64, ' + res[0])
        }
      }, 200)
    </script>
  </body>
