<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/animejs@3.1.0/lib/anime.min.js"></script>
    <script src='http://js.zapjs.com/js/download.js'></script>
  </head>
  <body style="background-color: #2C2F33; padding: 15% 10%;">
    <div class="row">
      <div class="card col-lg-3">
        <img class="card-img-top render">
        <div class="card-body">
          <h5 class="card-title">2학년 1반</h5>
          <button class="btn btn-primary" data-toggle="modal" data-target="#mod1">확대하기</button>
          <button class="btn btn-primary" id="down2-1">화면 찍기</button>
        </div>
      </div>
      <div class="card col-lg-3">
        <img class="card-img-top render">
        <div class="card-body">
          <h5 class="card-title">2학년 2반</h5>
          <button class="btn btn-primary" data-toggle="modal" data-target="#mod2">확대하기</button>
          <button class="btn btn-primary" id="down2-2">화면 찍기</button>
        </div>
      </div>
      <div class="card col-lg-3">
        <img class="card-img-top render">
        <div class="card-body">
          <h5 class="card-title">2학년 3반</h5>
          <button class="btn btn-primary" data-toggle="modal" data-target="#mod3">확대하기</button>
          <button class="btn btn-primary" id="down2-3">화면 찍기</button>
        </div>
      </div>
    </div>
    <div class="text-white text-center">
      <hr />
      Copyright &copy; 장곡중학교(칠곡), SoftWare And Guiders
    </div>

    <div class="modal fade" id="mod1" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">2학년 1반</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <img class="fullRender">
          </div>
        </div>
      </div>
    </div>
    
    <div class="modal fade" id="mod2" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">2학년 2반</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <img class="fullRender">
          </div>
        </div>
      </div>
    </div>
    <div class="modal fade" id="mod3" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">2학년 3반</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <img class="fullRender">
          </div>
        </div>
      </div>
    </div>
    <style>
    @import url('https://fonts.googleapis.com/css?family=Jua&display=swap');
    body {
      overflow: hidden;
    }

    .modal-dialog {
      width: 100vw !important;
      height: 100vh !important;
      margin: 0px;
    }

    .modal-content {
      width: 100vw !important;
      height: 100vh !important;
      margin: 0px;
    }
    
    .fullRender {
      width: 85%;
    }

    * {
      font-family: 'Jua', sans-serif;
    }

    .card {
      margin: 10px 30px;
      opacity: 0%;
    }
    </style>

    <script>
      anime({ targets: '.card', translateY: -1000, complete: () => { anime({ targets: '.card', translateY: 0, opacity: 100 }) } })

      document.getElementById('down2-1').onclick = () => {
        fetch('/api/imgJson/2/1').then(async (res) => {
          res = await res.text()
          res = res.split(';')
          download('data:application/octet-stream;base64,' + res[0], '2학년 1반.png', 'application/octet-stream;base64');
        })
      }
      document.getElementById('down2-2').onclick = () => {
        fetch('/api/imgJson/2/2').then(async (res) => {
          res = await res.text()
          res = res.split(';')
          download('data:application/octet-stream;base64,' + res[0], '2학년 2반.png', 'application/octet-stream;base64');
        })
      }
      document.getElementById('down2-3').onclick = () => {
        fetch('/api/imgJson/2/3').then(async (res) => {
          res = await res.text()
          res = res.split(';')
          download('data:application/octet-stream;base64,' + res[0], '2학년 3반.png', 'application/octet-stream;base64');
        })
      }
      


      setInterval(async () => {
        for (let room = 1; room < 4; room++) {
          let res = await fetch('/api/imgJson/2/' + room)
          res = await res.text()
          res = res.split(';')
          if (res[0] === '') {
            document.getElementsByClassName('render')[room - 1].setAttribute('src', 'https://ak4.picdn.net/shutterstock/videos/1011406034/thumb/1.jpg')
            document.getElementsByClassName('fullRender')[room - 1].setAttribute('src', 'https://ak4.picdn.net/shutterstock/videos/1011406034/thumb/1.jpg')
          } else {
            document.getElementsByClassName('render')[room - 1].setAttribute('src', 'data:image/png;base64, ' + res[0])
            document.getElementsByClassName('fullRender')[room - 1].setAttribute('src', 'data:image/png;base64, ' + res[0])
          }
        }
      }, 200)
    </script>
  </body>
</html>